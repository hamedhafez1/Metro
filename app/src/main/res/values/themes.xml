<resources>
    <style name="Theme.Metro" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/deep_orange</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/deep_orange</item>
        <item name="android:navigationBarColor">@color/deep_orange</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="title">@string/app_name_fa</item>
        <item name="fontFamily">@font/app_font</item>
    </style>

    <style name="MapActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/deep_orange</item>
        <item name="android:navigationBarColor">@color/deep_orange</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="fontFamily">@font/app_font</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:background">#ddd</item>
    </style>
</resources>